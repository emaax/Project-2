<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailActivity"
    tools:showIn="@layout/activity_detail"
  >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/item_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />
            <TextView
                android:id="@+id/item_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="start|bottom"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="12dp" />
            <TextView
                android:id="@+id/item_type_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_gravity="end|bottom"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:layout_margin="12dp" />

        </FrameLayout>


        <TextView
            android:id="@+id/item_address_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            android:layout_margin="@dimen/text_margin"
            android:text="hhh"
            />

        <TextView
            android:id="@+id/item_neighborhood_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_purple"
            android:text="hhh"
            android:layout_margin="@dimen/text_margin"
            />

        <TextView
            android:id="@+id/item_website"
            android:text="Click here to launch website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_margin="@dimen/text_margin"
            android:contextClickable="true"
            />

        <TextView
            android:id="@+id/item_description_text_view"
            android:text="hhh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="italic"
            android:layout_margin="@dimen/text_margin"
            android:layout_weight="0.10" />



    </LinearLayout>


